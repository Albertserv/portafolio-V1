{
  "version": 2,
  "builds": [
    {
      "src": "Gemfile",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "bundle install && bundle exec rails assets:precompile",
        "distDir": "public"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
