<!DOCTYPE html>
<html>
<head>
  <title>MiPortafolio</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
  <%= yield %>
</body>
</html>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    new Typed('#typed-name', {
      strings: ['Alberto Servin (>‿◠)✌', 'Web Designer ≧◠‿●‿◠≦', 'Entusiasta de la Tecnología (ɔ◔‿◔)ɔ ♥'],
      typeSpeed: 50,
      backSpeed: 25,
      backDelay: 2000,
      startDelay: 1000,
      loop: true
    });
  });
</script>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const toggleButton = document.getElementById('dark-mode-toggle');
    const body = document.body;
    const moonIcon = '<i class="fa-solid fa-power-off"></i>';
    const sunIcon = '<i class="fa-solid fa-bolt"></i>';

    toggleButton.addEventListener('click', function() {
      body.classList.toggle('dark-mode');
      document.querySelectorAll('header, nav ul li a, section, footer').forEach(element => {
        element.classList.toggle('dark-mode');
      });

      if (body.classList.contains('dark-mode')) {
        toggleButton.innerHTML = sunIcon;
      } else {
        toggleButton.innerHTML = moonIcon;
      }
    });
  });
</script>

